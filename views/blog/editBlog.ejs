    <div class="container">
        <h2 style="text-align: center;">Yazıyı Düzenle</h2>
        <form action="/editBlog/<%= blog._id %> " method="post">
            <div class="form-group">
                <label for="blogTitle">Başlık</label>
                <input class="form-control" id="blogTitle" placeholder="Blog Başlığı" type="text" name="blogTitle" value="<%= blog.blogTitle %> " required>
            </div>
            <div class="form-group">
                <label for="comSentence">Tanıtım Yazısı</label>
