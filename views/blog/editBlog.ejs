                <input class="form-control" id="comImage" placeholder="Resim URL" type="text" name="comImage" value="<%= blog.comImage %>">
                
            </div>
            
            <textarea name="blog" id="blog"><%= blog.blog %></textarea> 
            
            <br><br>
            <button type="submit" id="myButton" class="btn btn-outline-success">Paylaş</button>
            <a href="/admin" class="btn btn-secondary">İptal</a>
