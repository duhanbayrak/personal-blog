<%- include('./partials/header') %>


    <!-- Page Header-->
    <header class="masthead"
        style="background-image: url('https://cdn.pixabay.com/photo/2016/11/30/20/58/programming-1873854_960_720.png')">
        <div class="container position-relative px-4 px-lg-5 ">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading baslik">
                        <h1>Duhan Bayrak</h1>
                        <hr>
                        <span class="subheading">-Kişisel Blog-</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Main Content-->
    <div class="container px-4 px-lg-5">

        <div class="row gx-4 gx-lg-5 justify-content-center">
            <% var firstBlog=blogs.slice(0,5) %>
                <% firstBlog.forEach(e=> { %>
                    <div class="col-lg-3 mx-auto">
                        <img class="img-thumbnail" src="<%= e.comImage %> ">
                    </div>
                    <div class="col-lg-9 col-xl-7">
                        <div class="post-preview">

                            <a href="/blog/<%= e._id %>">
                                <h2 class="post-title">
                                    <%= e.blogTitle %>
                                </h2>
                                <h3 class="post-subtitle">
                                    <%= e.comSentence %>
                                </h3>
                            </a>
                            <p class="post-meta">
                                Posted by
                                <a href="#!">Duhan</a>
                                <%= e.date %>
                            </p>

                        </div>
                        <hr class="my-4" />
                    </div>
                    <% }) %>
                        <div class="d-flex justify-content-end mb-4"><a class="btn btn-outline-success text-uppercase"
                                href="/allBlogs">Tüm Yazılar→</a></div>
        </div>

    </div>
    <%- include('./partials/footer') %>